<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="320dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:background="@color/gray"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose what tile to place as head"
            android:textColor="@color/white"/>

        <LinearLayout
            android:id="@+id/ll_createmap_popup_headtail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_createmap_popup_teleporter"
                android:tag="1"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:text="Teleporter"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/btn_createmap_popup_blackhole"
                android:tag="2"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:text="Blackhole"
                android:layout_margin="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_createmap_popup_specialtiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_createmap_popup_immunity"
                android:tag="3"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:text="Immunity"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/btn_createmap_popup_disabled"
                android:tag="4"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:text="Disabled"
                android:layout_margin="10dp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/et_createmap_popup_pcoordinate"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:hint="Coordinate of tail"
            android:textSize="12dp"
            android:background="@color/white"
            android:inputType="numberDecimal"/>

        <Button
            android:id="@+id/btn_createmap_popup_next"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Next"
            android:layout_margin="10dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>